<%= form_for(user) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.check_box :admin %>
    <%= f.label :admin %>
  </div>

  <div class="form-group">
    <%= f.label :group_id %>
    <%= f.collection_select :group_id, Group.all, :id, :name %>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
